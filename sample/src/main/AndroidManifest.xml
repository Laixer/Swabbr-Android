<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.laixer.sample">

    <dist:module
        dist:instant="false"
        dist:onDemand="true"
        dist:title="@string/module_feature_vlogs">
        <dist:fusing dist:include="true" />
    </dist:module>

    <application tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name="com.laixer.sample.presentation.profile.ProfileActivity"
            android:parentActivityName="com.laixer.core.MainActivity" />
        <activity
            android:name="com.laixer.sample.presentation.vloglist.VlogListActivity"
            android:parentActivityName="com.laixer.core.MainActivity" >
        </activity>
        <activity
            android:name="com.laixer.sample.presentation.vlogdetails.VlogDetailsActivity"
            android:parentActivityName="com.laixer.sample.presentation.vloglist.VlogListActivity" />

        <activity
            android:name="com.laixer.sample.presentation.recordvlog.RecordVlogActivity"
            android:parentActivityName="com.laixer.core.MainActivity">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.laixer.sample.presentation.search.SearchActivity"
            android:parentActivityName="com.laixer.core.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>

    </application>
</manifest>
