<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:layout_margin="@dimen/content_margin"
    app:cardElevation="0dp"
    app:cardCornerRadius="12dp"
    android:foreground="?selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/content_margin"
        android:foreground="?selectableItemBackground">

        <include
            android:id="@+id/followrequest_user_info"
            layout="@layout/include_user_info"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/followrequest_action_part"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/followrequest_action_part"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/followrequest_accept"
                style="@style/TextAppearance.MaterialComponents.Button"
                android:layout_width="@dimen/medium_icon_size"
                android:layout_height="@dimen/medium_icon_size"
                android:layout_marginHorizontal="@dimen/content_margin"
                android:background="@color/transparent"
                android:contentDescription="@string/accept"
                android:src="@drawable/ic_baseline_check_circle_outline_24"
                android:tint="@color/colorAccept" />

            <ImageButton
                android:id="@+id/followrequest_decline"
                style="@style/TextAppearance.MaterialComponents.Button"
                android:layout_width="@dimen/medium_icon_size"
                android:layout_height="@dimen/medium_icon_size"
                android:layout_marginEnd="@dimen/content_margin"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="@string/decline"
                android:src="@drawable/ic_baseline_not_interested_24"
                android:tint="@color/colorDecline" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>

