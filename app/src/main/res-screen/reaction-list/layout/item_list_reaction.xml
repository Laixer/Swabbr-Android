<?xml version="1.0" encoding="utf-8"?><!--
    TODO Don't hard-code the divider spacing (layout_height). This
         didn't want to wrap content with a transparent divider view.
    Displays a single reaction item in the reaction overlay. Each
    item is displayed on top of a card view.
-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="108dp">

    <!-- Center guideline -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_reaction_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@id/video_user_profile_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_percent="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/video_user_profile_image" />

    <!-- User profile image -->

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/video_user_profile_image"
        android:layout_width="@dimen/medium_profile_image_size"
        android:layout_height="@dimen/medium_profile_image_size"
        android:layout_gravity="center"
        android:src="@drawable/ic_person_large_256"
        android:transitionName="userAvatar"
        app:civ_circle_background_color="@color/color_grey_300"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!-- The users (full) name, or username if none is present. -->
    <TextView
        android:id="@+id/video_user_displayed_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/content_margin_large"
        android:layout_marginBottom="@dimen/content_margin_small"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/color_white"
        android:textSize="14sp"
        android:transitionName="userUsername"
        app:layout_constraintBottom_toTopOf="@+id/guideline_reaction_item"
        app:layout_constraintStart_toEndOf="@+id/video_user_profile_image"
        tools:text="@string/placeholder_display_name"
        tools:visibility="visible" />


    <!-- The @nickname tag. -->
    <TextView
        android:id="@+id/video_user_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:singleLine="true"
        android:textAppearance="@style/SmallTextAppearance"
        android:textColor="@color/color_white"
        android:textSize="12sp"
        android:transitionName="userName"
        app:layout_constraintStart_toStartOf="@+id/video_user_displayed_name"
        app:layout_constraintTop_toBottomOf="@+id/video_user_displayed_name"
        tools:text="@string/placeholder_nickname"
        tools:visibility="visible" />

    <!-- Background fill, pushed to the background using translationZ. -->
    <View
        android:id="@+id/reaction_overlay"
        android:layout_width="0dp"
        android:layout_height="@dimen/medium_profile_image_size"
        android:layout_marginStart="@dimen/medium_profile_image_size_half"
        android:background="@color/color_transparent_overlay"
        android:translationZ="-1dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/video_user_profile_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/video_user_profile_image"
        app:layout_constraintVertical_bias="0.51" />

</androidx.constraintlayout.widget.ConstraintLayout>
