<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/content_margin"
    app:cardBackgroundColor="@color/color_window_background_transparent"
    app:cardCornerRadius="40dp"
    app:cardElevation="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/content_margin"
        android:orientation="horizontal">

        <include
            layout="@layout/include_user_info"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="center" />

        <View
            style="@style/Divider"
            android:layout_width="4px"
            android:layout_height="50dp"
            android:layout_marginHorizontal="@dimen/divider_margin" />

        <TextView
            android:id="@+id/reactionPostDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_marginEnd="@dimen/content_margin"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            tools:text="Reaction Post Date" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
