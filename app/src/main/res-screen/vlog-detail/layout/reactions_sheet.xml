<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomSheetDialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:behavior_peekHeight="264dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <LinearLayout
        android:id="@+id/bottom_app_bar"
        android:layout_width="match_parent"
        android:layout_height="264dp"
        android:background="@color/transparent"
        android:gravity="bottom"
        android:orientation="vertical">

        <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="@dimen/medium_icon_size"
            android:layout_height="@dimen/medium_icon_size"
            android:layout_gravity="center"
            android:background="@drawable/tb_up_down"
            android:text=""
            android:textOff=""
            android:textOn="" />

        <LinearLayout
            android:id="@+id/button_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/content_margin"
            android:layout_marginVertical="@dimen/content_margin"
            android:background="@drawable/rounded_bg"
            android:orientation="horizontal"
            android:padding="@dimen/content_margin">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/reaction_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/content_margin"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="@color/color_white" />

                <ImageButton
                    android:id="@+id/react_button"
                    android:layout_width="@dimen/small_icon_size"
                    android:layout_height="@dimen/small_icon_size"
                    android:layout_gravity="center"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_message"
                    android:tint="@color/color_white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:orientation="horizontal">

                <ToggleButton
                    android:id="@+id/like_button"
                    android:layout_width="@dimen/small_icon_size"
                    android:layout_height="@dimen/small_icon_size"
                    android:layout_gravity="center"
                    android:background="@drawable/tb_love_it"
                    android:backgroundTint="@color/color_white"
                    android:text=""
                    android:textOff=""
                    android:textOn="" />

                <TextView
                    android:id="@+id/like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/content_margin"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="@color/color_white" />
            </LinearLayout>

        </LinearLayout>

        <include
            android:id="@id/exo_controller_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/content_margin"
            layout="@layout/exo_playback_control_view" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:layout_margin="@dimen/content_margin"

        android:maxHeight="300dp"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:indeterminateTint="@color/color_white"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/no_reactions"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rounded_bg"
            android:padding="@dimen/content_margin"
            android:text="No reactions yet."
            android:textAlignment="center"
            android:textColor="@color/color_white" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/reaction_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:fadeScrollbars="false"
            android:requiresFadingEdge="vertical"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarThumbVertical="@drawable/rounded_bg"
            android:scrollbars="vertical"
            android:visibility="gone">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/reactionsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_anchor="@id/bottom_app_bar"
                tools:listitem="@layout/item_list_reaction" />

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
</LinearLayout>
