<resources>
    <!-- TODO Fix -->
    <!--
        Main theme, which has the top (status) bar enabled
        means we are not in full screen mode.
    -->
    <style name="Base.Theme.Swabbr" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/color_window_background</item>
        <item name="android:colorBackground">@color/color_window_background</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowContentTransitions">true</item>
    </style>

    <!-- Controls how we display the nickname. -->
    <style name="NicknameTextAppearance">
        <item name="android:textSize">@dimen/text_size_user_nickname</item>
        <item name="android:autoSizeMaxTextSize">@dimen/text_size_auto_size_max</item>
        <item name="android:autoSizeMinTextSize">@dimen/text_size_user_nickname</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <!-- Text appearance for the tab text. -->
    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_size_tabs</item>
        <item name="textAllCaps">true</item>
    </style>

    <!-- Used to display regular settings. -->
    <style name="TextProfileSettings">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_settings</item>
    </style>

    <!-- Used to display italic settings. -->
    <style name="TextProfileItalicSettings" parent="Base.Theme.Swabbr">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/text_size_settings</item>
    </style>

    <!-- Used for input fields. -->
    <style name="TextInput" parent="Base.Theme.Swabbr">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_settings</item>
    </style>

    <!-- Used to style Swabbr buttons -->
    <style name="SwabbrButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:textColor">@color/colorPrimaryLight</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeColor">@color/colorPrimaryLight</item>
        <item name="strokeWidth">2dp</item>
        <item name="rippleColor">@color/colorPrimary</item>
    </style>

</resources>
