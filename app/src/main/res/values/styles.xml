<resources>

    <style name="Base.Theme.Swabbr" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/color_window_background</item>
        <item name="android:colorBackground">@color/color_window_background</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="SmallTextAppearance" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/color_body</item>
    </style>

    <style name="TitleTextAppearance" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/color_title</item>
    </style>

    <style name="SubtitleTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/color_subtitle</item>
    </style>

    <style name="Theme.Swabbr" parent="Base.Theme.Swabbr"/>

    <style name="Theme.Swabbr.Launcher" parent="Base.Theme.Swabbr">
        <item name="android:windowBackground">@drawable/ic_logo_foreground</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.Swabbr.Login" parent="Base.Theme.Swabbr">
        <item name="windowActionBar">false</item>
    </style>


    <style name="Theme.Swabbr.Recording" parent="Base.Theme.Swabbr">
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>
