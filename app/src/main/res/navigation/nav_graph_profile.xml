<?xml version="1.0" encoding="utf-8"?>
<!--
    Nav graph for displaying a profile. This can take us
    to the nav_graph_vlog_playback when we start watching
    the users vlogs. Note that this graph can correspond to
    the current user as well as any other user.
-->
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/nav_graph_profile"
    app:startDestination="@id/self_profile_dest">

    <!-- Actual user profile fragment. -->
    <fragment
        android:id="@+id/self_profile_dest"
        android:name="com.laixer.swabbr.presentation.profile.ProfileFragment"
        android:label="@string/myProfile"
        tools:layout="@layout/fragment_profile">
        <argument
            android:name="userId"
            android:defaultValue="self"
            app:argType="string" />
    </fragment>

    <!-- Include single vlog playback navigation. -->
    <include app:graph="@navigation/nav_graph_vlog_playback" />

    <!-- Fullscreen watching of user vlogs with swipe interface. -->
    <fragment
        android:id="@+id/watch_user_vlogs_dest"
        android:name="com.laixer.swabbr.presentation.vlogs.playback.WatchUserVlogsFragment"
        android:label="Vlog"
        tools:layout="@layout/fragment_video_view_pager">
        <argument
            android:name="initialVlogId"
            app:argType="string"
            app:nullable="true"/>
        <argument
            android:name="userId"
            app:argType="string" />
        <deepLink
            android:id="@+id/deepLink"
            android:autoVerify="true"
            app:uri="https://swabbr.com/profileWatchVlog?userId={userId}&amp;initialVlogId={initialVlogId}" />
    </fragment>

    <!-- TODO This should't be required -->
    <action
        android:id="@+id/action_record_reaction"
        app:destination="@id/record_reaction_dest" />
    <!-- Allows us to record a reaction. -->
    <fragment
        android:id="@+id/record_reaction_dest"
        android:name="com.laixer.swabbr.presentation.reaction.RecordReactionFragment"
        android:label="Reaction"
        tools:layout="@layout/fragment_record_video">

        <argument
            android:name="cameraId"
            app:argType="string"
            app:nullable="false"/>

        <argument
            android:name="vlogId"
            app:argType="string"
            app:nullable="false"/>
    </fragment>

</navigation>
