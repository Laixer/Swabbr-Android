<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/nav_graph_profile"
    app:startDestination="@id/auth_profile_dest">

    <fragment
        android:id="@+id/auth_profile_dest"
        android:name="com.laixer.swabbr.presentation.profile.AuthProfileFragment"
        android:label="@string/myProfile"
        tools:layout="@layout/fragment_auth_profile_vlogs">
        <action
            android:id="@+id/action_view_settings"
            app:destination="@id/settings_dest"/>
    </fragment>

    <fragment
        android:id="@+id/settings_dest"
        android:name="com.laixer.swabbr.presentation.profile.settings.SettingsFragment"
        android:label="@string/settings"
        tools:layout="@layout/fragment_settings">
    </fragment>

</navigation>
