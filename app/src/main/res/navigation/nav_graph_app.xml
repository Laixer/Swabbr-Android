<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_app"
    app:startDestination="@id/dashboard_dest">
    <fragment
        android:id="@+id/streaming_dest"
        android:name="com.laixer.swabbr.presentation.recording.StreamingFragment"
        android:label="@string/connecting"
        tools:layout="@layout/fragment_record">
        <argument
            android:name="streamRequest"
            app:argType="com.laixer.swabbr.presentation.recording.StreamingFragment$StreamRequest" />
    </fragment>

    <fragment
        android:id="@+id/dashboard_dest"
        android:name="com.laixer.swabbr.presentation.dashboard.DashboardFragment"
        android:label="@string/dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <action
        android:id="@+id/action_authenticate"
        app:destination="@id/authActivity" />

    <activity
        android:id="@+id/authActivity"
        android:name="com.laixer.swabbr.presentation.auth.AuthActivity" />

    <include app:graph="@navigation/nav_graph_profile" />
    <include app:graph="@navigation/nav_graph_search" />
    <include app:graph="@navigation/nav_graph_vlogs" />
</navigation>
